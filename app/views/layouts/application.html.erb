<!DOCTYPE html>
<html>
<head>
  <title>MovieNinja</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.3.0/pure-min.css">
  <%= csrf_meta_tags %>
  <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
  <script src="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>
</head>

  <%= render partial: "layouts/modal" %>

  <% if flash[:error] %>
      <div class='error'><%= flash[:error] %></div>
  <% end %>

  <% if signed_in? %>
    <p class='sign-in-name'>Signed in as: <%= current_user.email %></p>
    <%= button_to "logout", session_path(current_user), method: :delete %>
  <% else %>
    <%= render partial: "layouts/signup", locals: {user: @user} %>
    <%= render partial: "layouts/signin", locals: {user: @user} %>
  <%end%>

<body>

  <%= yield %>

</body>
</html>
