<!DOCTYPE html>
<html>
<head>
  <title>MovieNinja</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

  <% if flash[:error] %>
      <div class='error'><%= flash[:error] %></div>
  <% end %>

  <% if signed_in? %>
    <p class='sign-in-name'>Signed in as: <%= current_user.email %></p>
    <%= button_to "logout", session_path(current_user), method: :delete %>
  <% else %>
    <%= render partial: "layouts/signup", locals: {user: @user} %>
    <%= render partial: "layouts/signin", locals: {user: @user} %>
  <%end%>

<body>

  <%= yield %>

</body>
</html>
