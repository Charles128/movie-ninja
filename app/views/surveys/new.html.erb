<div class = "movie-list">
  <%= render @movies %>
</div>

<div id="sidebar">
  <div id="sidebar-content">
    My Survey
    <%= form_for @survey do |f| %>
      <div id="picked-movies">
      </div>
      <input type="date" name="survey[first_available_datetime]" id="datepicker">
      <textarea id="survey-comment" name="survey[info]" placeholder="Anything else you want your friends to know..."></textarea>
      <input type="submit" class="pure-button pure-button-small" id='submit-survey'>
    <% end %>
  </div>
</div>


